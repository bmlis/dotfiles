{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --file=/dev/stdin <<EOF
{{ $profile := .profile -}}
{{ $os := .chezmoi.os -}}

{{ range $p := list "base" $profile -}}
{{ with index $.packages $p $os -}}
{{ range .brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .casks -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
{{ end -}}
EOF
{{ end -}}
